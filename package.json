{
  "name": "relay",
  "version": "1.0.0",
  "license": "MIT",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "build:shared": "yarn workspace @relay/shared build",
    "build:server": "yarn workspace @relay/server build",
    "build": "yarn build:shared && yarn build:server",
    "dev:shared": "yarn workspace @relay/shared build:watch",
    "dev:server": "yarn workspace @relay/server dev",
    "dev": "yarn build:shared && concurrently 'yarn dev:shared' 'yarn dev:server'"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^3.10.1",
    "@typescript-eslint/parser": "^3.10.1",
    "concurrently": "^5.3.0",
    "eslint": "^7.7.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-prettier": "^3.1.4",
    "prettier": "^2.1.1",
    "typescript": "^4.0.2"
  }
}
